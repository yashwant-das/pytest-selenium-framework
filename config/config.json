{
    "browser": {
        "default": "chrome",
        "headless": false,
        "implicit_wait": 10,
        "chrome": {
            "arguments": ["--no-sandbox", "--disable-dev-shm-usage"]
        },
        "firefox": {
            "arguments": []
        }
    },
    "reporting": {
        "screenshots": true,
        "logs": true,
        "html_report": true,
        "allure_report": true,
        "screenshot_on_failure": true,
        "screenshot_dir": "reports/screenshots",
        "html_report_dir": "reports/html",
        "allure_results_dir": "reports/allure-results"
    },
    "retry": {
        "max_retries": 2,
        "delay": 1
    },
    "timeouts": {
        "element": 10,
        "page_load": 30,
        "script": 30,
        "implicit": 10
    }
}